<% if flash[:error] %>
<div class="container">
<ul>
<% flash[:error].each do |error| %><br>
<li style="color:red"><%= error %> </li>
<% end %>
</ul>
</div>
<% end %>

<div class="container">
	<h1>Login</h1>
		<%=form_tag login_sessions_path do %>
			<div>
			    <%= label_tag :email %> <br>
			    <%= text_field_tag :email %><br>
			</div>
			<div>
	        <%= label_tag :password %> <br>
	        <%= password_field_tag :password %><br>
	        <%= submit_tag "Submit" %>
	     <% end %>
			</div>
</div>